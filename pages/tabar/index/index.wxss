.index_home{
    width: 100%;
    height: 100%;
    position: relative;
}
.index_banner{
    margin-top: 60rpx;
}
.index_banner swiper image{
    width: 100%;
    height: 300rpx;
}
.index_home .index_search{
    position: fixed;
    top: 0rpx;
    z-index: 1;
    width: 100%;
    height: 60rpx;
    background-color: #ffffff;
}
.index_home .index_search view{
    width: 100%;
    background-color: #ffffff;
    text-align: center;
    height: 55rpx;
    font-size: 25rpx;
    line-height: 55rpx;
    border-radius: 25rpx;
    color: #999999;
}
.index_tab{
    margin-top: 20rpx;
    background-color: #ffffff;
}
.index_tab .page__bd{
    padding: 20rpx;
}
.index_tab .weui-flex__item{
    text-align: center;
}
.index_list{
    margin-top: 20rpx;
    background-color: #ffffff;
}
.index_list .list_header{
    overflow: hidden;
    padding: 20rpx;
    border-bottom: 1rpx solid #dddddd;
}
.index_list .list_header .search{
    float: left;
}
.index_list .list_header .tab{
    float: right;
}
.index_list .list_header .tab .item{
    display: inline-block;
    margin-right: 20rpx;
    color: #999999;
}
.isitem{
    color: #000000!important;
    border-bottom: 3rpx solid #f20c00
}
.list_item{
    padding: 0 20rpx;
}
.list_item .item{
    border-bottom: 1rpx solid #dddddd;
    display: flex;
    padding: 20rpx 0;
}
.list_item .item image{
    width: 200rpx;
    height: 180rpx;
}
.list_item .item .images{
    width: 220rpx;
}
.list_item .item .item_content{
    flex: 1;
}
.list_item .item .item_content .title{
    font-size: 30rpx;
    color: #000000;
}
.list_item .item .item_content .prize{
    font-size: 36rpx;
    color: #f20c00;
}
.list_item .item .item_content .prize span{
    font-size: 20rpx;
    margin-right: 5rpx;
}
.list_item .item .item_content .content{
    font-size: 24rpx;
    color: #999999;
}
.list_item .item .item_content .discount .i-tags{
    margin-right: 10rpx;
    line-height: 16px;
    height: 16px;
    font-size: 10px;
}
